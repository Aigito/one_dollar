<div class= "registration">
  <div class = "card d-flex flex-row">
    <div class= "card-block">
        <div class="container" id="registration-header">
          <div class="row">
            <div class="col-12 col-lg-12">
              <h1><%= t('.create_your_one_dollar_account') %></h1>
            </div>
          </div>
        </div>
            <div class="container">
              <div class="row">
                <div class="col-12 col-lg-12">
                  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name))do |f| %>

                    <%= bootstrap_devise_error_messages! %>

                    <div class="form-floating mb-3">
                      <%= f.text_field :first_name,
                                        autofocus: true,
                                        required: true,
                                        autocomplete: 'first_name',
                                        class: 'form-control',
                                        type: "first_name",
                                        id:"floatingFirstName",
                                        placeholder:"First Name" %>
                      <%= f.label :first_name %>
                    </div>

                    <div class="form-floating mb-3">
                      <%= f.text_field :last_name,
                                        autofocus: true,
                                        required: true,
                                        autocomplete: 'last_name',
                                        class: 'form-control',
                                        type: "last_name",
                                        id:"floatingLastName",
                                        placeholder:"Last Name" %>
                      <%= f.label :last_name %>
                    </div>

                    <div class="form-floating mb-3">
                      <%= f.email_field :email,
                                        autofocus: true,
                                        autocomplete: 'email',
                                        class: 'form-control',
                                        type: "email" ,
                                        id:"floatingEmail",
                                        placeholder:"Email"%>
                      <%= f.label :email %>
                    </div>

                    <div class="form-floating mb-3">
                      <%= f.number_field :investment,
                                          required: true,
                                          autofocus: true,
                                          autocomplete: 'investment',
                                          class: 'form-control',
                                          type: "investment",
                                          id:"floatingInvestment",
                                          placeholder: "Investment Amount" %>
                      <%= f.label :investment_amount %>
                    </div>

                    <div class="form-floating mb-3">
                      <%= f.password_field :password,
                                            autocomplete: 'current-password',
                                            class: 'form-control',
                                            type: "password",
                                            id:"floatingPassword",
                                            placeholder: "Password" %>
                      <%= f.label :password %>
                      <% if @minimum_password_length %>
                        <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
                      <% end %>
                    </div>

                    <div class="form-floating mb-3">
                      <%= f.password_field :password_confirmation,
                                            autocomplete: 'new-password',
                                            class: 'form-control',
                                            type: "password",
                                            placeholder: "Password confirmation" %>
                      <%= f.label :password_confirmation %>
                    </div>

                    <div class="form-group submit-button">
                      <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
                    </div>

                  <% end %>

              </div>
            </div>

            </div>
            <div class="container">
            <%= render 'devise/shared/links' %>
            </div>
       </div>
       <div class="col-12 col-sm-4">
            <%= image_tag "logo-removedbg.png", class: "registration-brand" %>
            <div class ="registration-brand-text">
            <%= "One Dollar, helping you reach your financial goals!"%>
            </div>
       </div>
    </div>
  </div>
</div>
