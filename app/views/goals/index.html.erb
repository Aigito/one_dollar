<div class="banner">
  <div class="mx-10 p-6 mb-0">
    <h1 class="heading-colour font-weight-900 align-middle">Archived Goals </h1>
    <br>
    <% # <h2 class="text-white font-weight-900"><h2> %>
    <p class="text-size text-white">Want to bring some goals back to life?</p>
  </div>
</div>

<div class="container">

  <div class="container">
    <div class="row">
        <% @goals.each do |goal| %>
          <% if goal.user == current_user && goal.archived == true %>
            <div class="col-4">
              <div class="card mb-4 h-100 goal-card inner-card mt-3">
                <%= link_to goal_path(goal), class:"goal-card-link-show linkable" do %><% end %>
                  <div class="p-3">
                    <div class="float-right d-flex flex-column card-icon">
                      <%= link_to edit_goal_path(goal) do %>
                        <i class="fas fa-edit"></i>
                      <% end %>
                        <i class="fas fa-archive" id="archive-goal-sweet-alert"></i>
                        <%= link_to "", archive_goal_path(goal), method: :post, id: "archive-goal", class: "hidden" %>
                    </div>
                    <div class="card-top">
                      <img class="card-img-top" src="https://source.unsplash.com/random" alt="Card image caption"/>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title text-truncate">Title: <%= goal.title %></h5>
                      <p class="card-text text-truncate">Description: <%= goal.description %></p>
                      <p class="card-text">Goal Amount: $<%= goal.amount %></p>
                    </div>
                    <div class="card-footer">
                      <small class="text-muted">Due Date: <%= goal.date %></small>
                    </div>
                  </div>
                </div>
            </div>
          <% end %>
        <% end %>
    </div>

</div>
