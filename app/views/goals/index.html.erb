<div class="container">

  <h1>Archived Goals</h1>

  <div class="container">
    <div class="row">
        <% @goals.each do |goal| %>
          <% if goal.user == current_user && goal.archived == true %>
            <div class="col-4">
              <div class="card mb-4 h-100">
                <div class="inner-card p-3">
                  <div class="float-right">
                    <%= link_to goal_path(goal) do %>
                      <i class="fas fa-trophy"></i>
                    <% end %>
                    <%= link_to edit_goal_path(goal) do %>
                      <i class="fas fa-edit"></i>
                    <% end %>
                    <%= button_to unarchive_goal_path(goal), method: :post, :onclick => "return confirm('Are you sure you want to unarchive this goal?')" do %>
                      <i class="fas fa-archive"></i>
                    <% end %>
                  </div>
                  <div class="card-top">
                    <img class="card-img-top" src="https://source.unsplash.com/random" alt="Card image caption">
                  </div>
                  <div class="card-body">
                    <h5 class="card-title text-truncate">Title: <%= goal.title %></h5>
                    <p class="card-text text-truncate">Description: <%= goal.description %></p>
                    <p class="card-text">Goal Amount: <%= goal.amount %></p>
                  </div>
                  <div class="card-footer">
                    <small class="text-muted">TO DO: Days till completion</small>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>

</div>
